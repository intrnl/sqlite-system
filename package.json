{
	"type": "module",
	"name": "@intrnl/sqlite-system",
	"description": "Painless Node.js wrapper for SQLite",
	"version": "0.1.0",
	"license": "MIT",
	"author": "intrnl",
	"repository": {
		"url": "https://github.com/intrnl/sqlite-system"
	},
	"main": "dist/index.js",
	"files": [
		"dist/",
		"types/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"prepublishOnly": "pnpm run build",
		"build": "pnpm run build:lib && pnpm run build:types",
		"build:lib": "esbuild lib/*.ts --format=esm --outdir=dist",
		"build:types": "tsc"
	},
	"engines": {
		"node": ">= 14.17.0"
	},
	"devDependencies": {
		"@types/node": "^14.14.40",
		"esbuild": "^0.11.20",
		"typescript": "^4.2.4"
	}
}
